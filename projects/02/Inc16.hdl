/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
        ALU(x=in, y=in, zx=false, nx=true, zy=true, ny=true, f=true, no=true, out=out, zr=zr, ng=ng);
}